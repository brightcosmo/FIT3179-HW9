{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Net change in tree cover from 2000-2022 in Malaysia",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "background": "skyblue",
  "layer": [
    {
      "data": {
          "url": "https://github.com/brightcosmo/FIT3179-HW9/blob/4219e1ff74af1c298b5802017ecd851a1e03fc3e/data/malaysia-states.topojson",
          "format": {"type": "topojson", "feature": "states"}
      },
      "transform": [
        {
          "lookup": "id",
          "from": {
            "data": {
              "url": "https://github.com/brightcosmo/FIT3179-HW9/blob/d8ab6210eaa9088f914de95330b090b4002a240a/data/Country_carbon_data.csv"
            },
            "key": "subnational1",
            "fields": ["change2"]
          }
        },
        {"calculate": "datum.change2", "as": "Tree Cover Loss"}
      ],
      "mark": {
          "type": "geoshape",
          "stroke": "black",
          "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Tree Cover Loss",
          "type": "quantitative",
          "scale": {"type": "linear", "scheme": "reds", "reverse": false}
        },
        "tooltip": [
          {"field": "id", "type": "nominal", "title": "State"},
          {"field": "Tree Cover Loss", "type": "quantitative", "title": "% loss"}
        ]
      }
  },
  {
      "data": {
          "url": "https://github.com/brightcosmo/FIT3179-HW9/blob/main/data/ne_110m_graticules_5.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_5"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
  }
  ]
}