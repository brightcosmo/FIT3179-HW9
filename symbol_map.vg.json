{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Net change in tree cover from 2000-2022 in Malaysia",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "../data/malaysia-states.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "id",
      "from": {
        "data": {
          "url": "../data/Country_carbon_data.csv"
        },
        "key": "subnational1",
        "fields": ["change2"]
      }
    },
    {"calculate": "datum.change2", "as": "Tree Cover Loss"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Tree Cover Loss",
      "type": "quantitative",
      "scale": {"type": "linear", "scheme": "reds", "reverse": false}
    },
    "tooltip": [
      {"field": "id", "type": "nominal", "title": "State"},
      {"field": "Tree Cover Loss", "type": "quantitative", "title": "% loss"}
    ]
  }
}